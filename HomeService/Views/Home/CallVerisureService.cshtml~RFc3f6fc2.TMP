@model IEnumerable<HomeService.Controllers.ClimateData>

<table class="table table-hover">

	<thead>
	<th>Lokasjon</th>
	<th>Temperatur</th>
	<th> Fuktighet</th>
	<th>Tidskontroll</th>
	<th>Informasjon</th>
	<tbody>
		@foreach (var data in ViewData["ClimateData"] as IEnumerable<HomeService.Controllers.ClimateData>)
		{

			<tr class="table-info">
				<td>
					@data.Location
				</td>
				<td>

					@if (data.Temperature < 18.0)
					{
						<p style="color:red">@String.Concat(data.Temperature, Html.Raw(((char)176).ToString())) </p>
					}
					else
					{

						@String.Concat(data.Temperature, Html.Raw(((char)176).ToString()))
					}
				</td>
				<td>
					@if (data.Humidity > 55 || data.Humidity < 40 && data.Humidity != 0)
					{
						<p style="color:red">@data.Humidity % </p>
					}

					else
					{
						<p>@data.Humidity </p>

							}

					</td>
					<td>
						@data.Timestamp
					</td>

					<td>
						@if (data.Humidity > 55 && data.Humidity != 0)
						{
							<p style="color:red">Høy fuktighet! </p>
						}
						@if (data.Humidity <= 55 && data.Humidity >= 40 && data.Temperature >= 18 && data.Temperature <= 22 || data.Humidity == 0)
						{
							<p>OK</p>
						}
						@if (data.Humidity < 40 && data.Humidity != 0)
						{
							<p style="color:red">Lav fuktighet! </p>
						}

						@if (data.Temperature < 18.0)
						{
							<p style="color:red"> For kaldt brrr! </p>
						}

					</td>
				</tr>

					}
				</tbody>
	</thead>
			</table>

			@if (ViewData["AlarmStatus"].Equals("unarmed"))
			{
				<div class="alert alert-danger" role="alert">
					<p>@ViewData["AlarmStatus"]: Ulåst</p>
					<p>@ViewData["AlarmStatusDate"]</p>
				</div>
			}
			else
			{
				<div class="alert alert-success" role="alert">
					<p>@ViewData["AlarmStatus"]: Låst</p>
					<p>@ViewData["AlarmStatusDate"]</p>
				</div>
			}








